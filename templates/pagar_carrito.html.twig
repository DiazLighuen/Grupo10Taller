{% extends 'layout.html.twig' %}
{% block title %}
    Pagar Carrito
{% endblock %}
{% block content %}
    <div class="container pt-5">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 center-horizontal">

                <td> Items : {{ items }}</td>
                <td> Importe Total a Pagar $ : {{ imp_total }}</td>

                <p>
                <div class="card-body mx-4 mt-4">
                    <!--Body-->
                    <form id="pagar" method="POST" action="?action=pago">
                        <input type="hidden" name="cart_id" value="{{ cart_id }}">
                        <div class="md-form">
                            <input type="text" id="titular" name="titular" class="form-control" autofocus required>
                            <label for="Form-email4">Titular</label>
                        </div>
                        <div class="md-form pb-3">
                            <input type="text" id="tarjeta" name="tarjeta" class="form-control" required>
                            <label for="Form-email4">Tarjeta</label>
                        </div>
                        <div class="md-form pb-3">
                            <input type="text" id="vencimiento" name="vencimiento" class="form-control" required>
                            <label for="Form-email4">Vencimiento</label>
                        </div>
                        <div class="md-form pb-3">
                            <input type="text" id="seguridad" name="seguridad" class="form-control" required>
                            <label for="Form-email4">Seguridad</label>
                        </div>
                        <div class="text-center mb-4">
                            <input class="btn btn-primary btn-block z-depth-2 green" type="submit" id='boton'value="Pagar">
                        </div>
                    </form>
                </div>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
{% block scripts %}
{% endblock %}
