{% extends 'layout.html.twig' %}

{% block title %}
    Buscar Hotel
{% endblock %}

{% block content %}

    <div class="container pt-5">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 center-horizontal">
                <!--Form with header-->

                <form method="post" action="">

                  <h3>Buscar Hotel</h3>

                  <label for="ciudad">Ciudad: </label>
                  <select name="ciudad" size = "1" id="ciudad">
                  <option></option>
                  {% for ciudad in ciudades %}
                    <option value="{{ ciudad.name }}" {% if ciudad.name == ciudad_seleccionada %} selected {% endif %}>{{ ciudad.name}}</option>
                  {% endfor %}
                  </select>

                  <p><label for="nombre">Fecha Desde</label>
                  <input id="fecha_desde" name="fecha_desde" type="date" value="{{ fecha_desde }}">

                  <p><label for="fecha_hasta">Fecha Hasta</label>
                  <input id="fecha_hasta" name="fecha_hasta" type="date" value="{{ fecha_hasta }}">

                  <input class="btn btn-xs" type="submit" value="Buscar"></p>

                  <h3>Listado de Hoteles</h3>
                  <div class="table-responsive">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>Dirección</th>
                          <th>Compañía</th>
                          <th>Nombre</th>
                        </tr>
                      </thead>
                      <tbody>
                      {% for  hotel  in hoteles %}
                        <tr>
                          <td id="address">{{ hotel.address }}</td>
                          <td id="compañia">{{ hotel.compañia }}</td>
                          <td id="nombre">{{ hotel.nombre }}</td>
                        </tr>
                      {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </form>

                <!--/Form with header-->
            </div>
        </div>
    </div>

{% endblock %}

{% block scripts %}
{% endblock %}
