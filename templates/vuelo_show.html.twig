{% extends 'layout.html.twig' %}

{% block title %}
    Detalle del Asiento
{% endblock %}

{% block content %}
    <div class="card card-cascade narrower">
        <h4 class="d-flex justify-content-center mt-3 mb-3"> Detalle del Asiento </h4>
    </div>
    <div class="table-wrapper table-responsive">
        <!--Table-->
        <table class="table table-hover mb-0">

            <!--Table head-->
            <thead>
            <tr>
                <th class="th-lg">Asiento<i class="ml-1"></i></th>
                <th class="th-lg">Clase<i class="ml-1"></i></th>
                <th class="th-lg">Precio<i class="ml-1"></i></th>
				<th class="th-lg">Fecha Salida<i class="ml-1"></i></th>
				<th class="th-lg">Fecha Llegada<i class="ml-1"></i></th>
                <th class="th-lg">Aerol√≠nea<i class="ml-1"></i></th>
				{% if usuario_es_consumidor %}
                <th class="text-center">Agregar al Carrito<i class="ml-1"></i></th>
				{% endif %}
            </tr>
            </thead>
            <!--Table head-->

            <!--Table body-->
            <tbody>
                <tr>
                    <td id="number">{{ vuelo.number }}</td>
                    <td id="class">{{ vuelo.class }}</td>
                    <td id="price">{{ vuelo.price }}</td>
					<td id="origin_date">{{ vuelo.origin_date | date("d/m/Y") }}</td>
					<td id="destiny_date">{{ vuelo.destiny_date | date("d/m/Y") }}</td>
                    <td id="nombre_aerolinea">{{ vuelo.nombre_aerolinea }}</td>
					{% if usuario_es_consumidor %}
                    <td>
                        <div class="d-flex justify-content-center">
                            <form method="POST" action="?action=agregar_a_carrito" class="d-inline">
                                <input type="hidden" name="id_servicio" value="{{ vuelo.id_seat }}">
								<input type="hidden" name="type" value="{{ 'flight' }}">
								<input type="hidden" name="price" value="{{ vuelo.price }}">
                                <button type="submit"
                                        class="btn btn-primary btn-sm px-2 waves-effect waves-light btn-action"
                                        title="Agregar al Carrito"
                                        id="toggleButton"
                                        value="{{ automovil.id }}">
                                    <i class="fa fa-shopping-cart mt-0" aria-hidden="true"></i>
                                </button>
                            </form>

                        </div>
                    </td>
					{% endif %}
                </tr>
            </tbody>
            <!--Table body-->
        </table>
        <!--Table-->
    </div>
{% endblock %}

{% block scripts %}
{% endblock %}